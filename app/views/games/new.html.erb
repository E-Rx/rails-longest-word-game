<div class=container>
  <h1 class="text-dark">New game</h1>

    <ul>
      <% @letters.each do |letter| %>
      <li class=letters><%= letter %></li>
      <% end %>
    </ul>


  <h5 class="text-success">What is the longest word you can find?</h5>

    <form action="score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
        <input type="text" maxlength="10" name="answer">
        <input type="submit" value="Play">
    </form>
</div>
